<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_top_rounded_accent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/forum"
            android:layout_width="0dp"
            android:layout_height="@dimen/nav_bar_size"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawablePadding="@dimen/margin_micro"
            android:gravity="center"
            android:paddingTop="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default"
            android:text="@string/forum"
            android:textColor="@drawable/selector_navigation_view_item"
            app:drawableBottomCompat="@drawable/selector_navigation_view_circle"
            app:fontFamily="@font/din" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/robint"
            android:layout_width="0dp"
            android:layout_height="@dimen/nav_bar_size"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawablePadding="@dimen/margin_micro"
            android:gravity="center"
            android:paddingTop="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default"
            android:text="@string/robint"
            android:textColor="@drawable/selector_navigation_view_item"
            app:drawableBottomCompat="@drawable/selector_navigation_view_circle"
            app:fontFamily="@font/din" />

    </LinearLayout>
</FrameLayout>